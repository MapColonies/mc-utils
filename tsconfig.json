{
  "compilerOptions": {
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@src": ["./src/index.ts"],
    }
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
